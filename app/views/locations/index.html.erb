<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-8">
				<div class="jumbotron">
					<div class="col-md-4">
						<i class="fa fa-sun-o fa-cog fa-5x"></i>
					</div>

					<div class="col-md-8">
            <p>
              <%= @current_weather %>
            </p>
            <p>
              <%= @temprature %>
            </p>
					</div>
					<br>
					<br>
					<br>
				</div>
        <div class="jumbotron">
          <% @locations.each do |location| %>
            <div class="message">
              <a href="<%=location.url%>"><h4 class="content"><%= location.name %></h4></a>
              <p class="content"><%= location.description %></p>
            </div>
		      <% end %>
        </div>
			</div>
			<div class="col-md-4">
			  <div class="jumbotron">
				 <form method="GET" action="/locations/search">
				  <label for="seach">Search for Hike</label>
					<div class="form-group">
						<label for="seach">Name</label>
						<input type="search" class="form-control"name="search" id="search" placeholder="name">
					</div>

					<div class="form-group">
						<label for="elevation">Elevation</label>
						<select class="form-control" name="elevation" id="elevation">
						  	<option>Easy</option>
						  	<option>Medium</option>
						  	<option>Hard</option>
						</select>
					</div>
					<div class="form-group">
						<label for="zipcode">Zipcode</label>
						<input type="text" class="form-control"name="zipcode" id="zipcode">
					</div>
					<div class="form-group">
						<label for="radius">Radius</label>
						<input type="text" class="form-control"name="radius" id="radius">
					</div>
					<button type="submit" class="btn btn-danger btn-cog btn-block">Find Me A Hike
				   	</button>
				   	<br>
				</form>
			 </div>
		 </div>
		</div>
	</div>
</div>
